{
    "name": "dev-jots-backend",
    "version": "1.0.0",
    "description": "A blog webapp that allows users to write down their thoughts quickly and interact with others through a simple web application.",
    "main": "index.js",
    "scripts": {
        "start:dev": "nodemon -L --watch src --exec ts-node -r tsconfig-paths/register src/index.ts",
        "migrate:generate": "npx knex migrate:make",
        "migrate:run": "npx knex migrate:latest",
        "build": "tsc",
        "lint": "eslint . ",
        "format": "prettier --write \"src/**/*\"",
        "prepare": "husky",
        "test": "jest --coverage"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/parvez-ahammed/dev-jots-backend.git"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "type": "commonjs",
    "bugs": {
        "url": "https://github.com/parvez-ahammed/dev-jots-backend/issues"
    },
    "homepage": "https://github.com/parvez-ahammed/dev-jots-backend#readme",
    "devDependencies": {
        "@eslint/js": "^9.19.0",
        "@types/bcryptjs": "^2.4.6",
        "@types/express": "^5.0.0",
        "@types/express-rate-limit": "^5.1.3",
        "@types/helmet": "^0.0.48",
        "@types/jest": "^29.5.14",
        "@types/passport-jwt": "^4.0.1",
        "@types/winston": "^2.4.4",
        "eslint": "^9.19.0",
        "eslint-config-prettier": "^10.0.1",
        "eslint-plugin-prettier": "^5.2.3",
        "globals": "^15.14.0",
        "husky": "^9.1.7",
        "jest": "^29.7.0",
        "nodemon": "^3.1.9",
        "prettier": "^3.4.2",
        "ts-jest": "^29.2.5",
        "ts-node": "^10.9.2",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^5.7.3",
        "typescript-eslint": "^8.23.0"
    },
    "dependencies": {
        "@google/generative-ai": "^0.24.0",
        "axios": "^1.8.2",
        "bcryptjs": "^2.4.3",
        "cors": "^2.8.5",
        "dotenv": "^16.4.7",
        "express": "^4.21.2",
        "express-rate-limit": "^7.5.0",
        "helmet": "^8.0.0",
        "http-status": "^2.1.0",
        "jsonwebtoken": "^9.0.2",
        "knex": "^3.1.0",
        "ms": "^2.1.3",
        "ollama": "^0.5.13",
        "ollama-node": "^0.1.28",
        "passport": "^0.7.0",
        "passport-jwt": "^4.0.1",
        "pg": "^8.13.1",
        "swagger-ui-express": "^5.0.1",
        "winston": "^3.17.0",
        "winston-loki": "^6.1.3",
        "xhr2": "^0.2.1",
        "yamljs": "^0.3.0",
        "zod": "^3.24.2"
    },
    "jest": {
        "preset": "ts-jest",
        "testEnvironment": "node",
        "moduleFileExtensions": [
            "ts",
            "js"
        ],
        "transform": {
            "^.+\\.tsx?$": "ts-jest"
        },
        "testMatch": [
            "**/tests/**/*.test.ts"
        ],
        "moduleNameMapper": {
            "^@routes/(.*)$": "<rootDir>/src/routes/$1",
            "^@configs/(.*)$": "<rootDir>/src/configs/$1",
            "^@controllers/(.*)$": "<rootDir>/src/controllers/$1",
            "^@services/(.*)$": "<rootDir>/src/services/implementations/$1",
            "^@repositories/(.*)$": "<rootDir>/src/repositories/$1",
            "^@middlewares/(.*)$": "<rootDir>/src/middlewares/$1",
            "^@interfaces/(.*)$": "<rootDir>/src/interfaces/$1",
            "^@dtos/(.*)$": "<rootDir>/src/dtos/$1",
            "^@helpers/(.*)$": "<rootDir>/src/helpers/$1",
            "^@utility/(.*)$": "<rootDir>/src/utility/$1",
            "^knexfile$": "<rootDir>/knexfile"
        }
    }
}
